{
    "name": "niels/content",
    "description": "Dependency-less DDD example",
    "type": "project",
    "require-dev": {
        "pestphp/pest": "^0.3.6",
        "phpstan/phpstan": "^0.12.43",
        "friendsofphp/php-cs-fixer": "^2.16"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Niels Mokkentstorm",
            "email": "nielsmokkenstorm@gmail.com"
        }
    ],
    "scripts": {
        "test:types": "php vendor/bin/phpstan analyze ./{src,plugin} --level=max",
        "test:lint": "php vendor/bin/php-cs-fixer fix",
        "test:domain": "vendor/bin/pest --group=domain",
        "test:coverage": "vendor/bin/pest --coverage --min=90",
        "test:plugin": "vendor/bin/phpunit --testsuite=Plugin --colors=always",
        "test:unit": "vendor/bin/pest --group=unit",
        "test" : [
            "@test:lint",
            "@test:plugin",
            "@test:types",
            "@test:coverage"
        ]
    },
    "prefer-stable": true,
    "minimum-stability": "dev",
    "require": {
        "php": "^7.4.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/",
            "Plugin\\": "plugin/"
        }
    }
}
